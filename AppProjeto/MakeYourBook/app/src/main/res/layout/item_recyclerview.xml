<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="195dp"
    android:layout_marginTop="15dp"
    android:background="@drawable/customise_caixa_txt"
    android:elevation="100dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imagePerfil"
        android:layout_width="60dp"
        android:layout_height="65dp"
        android:src="@drawable/ic_profile"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/nmUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Nome Usuario"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/imagePerfil"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID:"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@id/nmUsuario"
        app:layout_constraintTop_toBottomOf="@id/nmUsuario" />

    <TextView
        android:id="@+id/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: R$ "
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/imagePerfil"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/valorTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000,00"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/texto"
        app:layout_constraintTop_toBottomOf="@+id/imagePerfil"
        />

    <TextView
        android:id="@+id/texto2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arrecadado: R$ "
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/imagePerfil"
        app:layout_constraintStart_toEndOf="@id/valorTotal"
        android:layout_marginStart="16dp"
        />

    <TextView
        android:id="@+id/valorArrecadado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0000,00"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/texto2"
        app:layout_constraintTop_toBottomOf="@+id/imagePerfil"
        />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TÃ­tulo"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/texto" />

    <TextView
        android:id="@+id/genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Romance"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@id/titulo"
        app:layout_constraintTop_toBottomOf="@id/titulo" />

    <TextView
        android:id="@+id/resumoHistoria"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        android:text="Lorem ipsum dolor sit \namet consectet\nur ad\nipiscing e\nlit, eleme\nntum facilisi non elementum facilisi non eos, sagittis vul..."
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genero" />


</androidx.constraintlayout.widget.ConstraintLayout>