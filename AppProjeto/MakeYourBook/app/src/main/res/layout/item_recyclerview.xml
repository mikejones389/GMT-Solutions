<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="15dp"
    android:padding="10dp"
    android:elevation="100dp"
    android:background="@drawable/customise_caixa_txt">

    <ImageView
        android:id="@+id/imagePerfil"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/avatar1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/nmUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome Usuario"
        android:textSize="20dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/imagePerfil"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/idUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID:"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/nmUsuario"
        app:layout_constraintStart_toStartOf="@id/nmUsuario"
        />

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TÃ­tulo"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagePerfil"
        />

    <TextView
        android:id="@+id/genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Romance"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:layout_constraintStart_toStartOf="@id/titulo"
        />

    <TextView
        android:id="@+id/resumoHistoria"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Lorem ipsum dolor sit \namet consectet\nur ad\nipiscing e\nlit, eleme\nntum facilisi non elementum facilisi non eos, sagittis vul..."
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genero" />

</androidx.constraintlayout.widget.ConstraintLayout>